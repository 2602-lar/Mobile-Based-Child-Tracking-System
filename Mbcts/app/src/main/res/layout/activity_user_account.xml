<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAccountActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/textViewHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MBCTS"
            android:textSize="18sp"
            android:textColor="#FFFFFF"
            android:background="@color/my_primary"
            android:padding="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="55dp">

            <TextView
                android:id="@+id/textSectionHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="User Account Setup"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:background="@color/my_primary"
                android:gravity="center"
                android:padding="8dp"/>

            <!-- username -->
            <TextView
                android:id="@+id/nameLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Username:" />

            <EditText
                android:id="@+id/txt_username_readonly"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:text="This is a read-only EditText"
                android:focusable="false"
                android:background="@null" />


            <!-- password -->
            <TextView
                android:id="@+id/passwordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="password:" />

            <EditText
                android:id="@+id/txt_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="provide your desired password" />

            <!-- confirm password -->
            <TextView
                android:id="@+id/conpasswordLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Password:" />

            <EditText
                android:id="@+id/txt_con_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:hint="Confirm Password" />

            <!-- Submit Button -->
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:onClick="Finish"
                android:text="Finish"
                app:cornerRadius="32dp" />
        </LinearLayout>
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>